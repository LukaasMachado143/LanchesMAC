@model IEnumerable<LanchesMAC_WEB_APP_.Models.Item>

<div class="title"> 
    <h2>Todos os Itens</h2>
</div>

<div class="container">
    <div class="row">
        @foreach(var item in Model){
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img src="@item.ImagemUrl" /></p>
                <h3>Preço: @item.Preco.ToString("c")</h3>
                <h5>@item.NomeItem</h5>
                <p>@item.DescricaoCurta</p>
            </div>
        }
    </div>
</div>